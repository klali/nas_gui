$('img#crop_photo').imgAreaSelect({ disable: true, hide: true });
<% if @prev_photo.nil? %>
  $('#prev_photo').html('');
<% else %>
  $('#prev_photo').html('<%= link_to(image_tag("/photos/#{@prev_photo.id}/thumbnail", :border => 0, :title => "Previous photo"), {:action => :thumbnail, :id => @tag.id, :photo_id => @prev_photo.id}, {:remote => true, :id => 'prevLink'}) %>');
<% end %>
$('#photo').html('<%= image_tag("/photos/#{@photo.id}/mediumimage", :border => 0, :id => 'crop_photo') %>');
<% if @next_photo.nil? %>
  $('#next_photo').html('');
<% else %>
  $('#next_photo').html('<%= link_to(image_tag("/photos/#{@next_photo.id}/thumbnail", :border => 0, :title => "Next photo"), {:action => :thumbnail, :id => @tag.id, :photo_id => @next_photo.id}, {:remote => true, :id => 'nextLink'}) %>');
<% end %>

$('#preview').html('<%= image_tag "/photos/#{@photo.id}/mediumimage", :width => "50px", :height => "50px" %>');
$('input#temp_thumb_id').val(<%= @photo.id %>);
$('input#temp_thumb_width').val('');
$('input#temp_thumb_height').val('');
$('input#temp_thumb_x1').val('');
$('input#temp_thumb_y1').val('');

$(document).trigger('reveal.facebox');
$('img#crop_photo').imgAreaSelect({ handles: true, onSelectChange: preview, onSelectEnd: storeResults, aspectRatio: '1:1', zIndex: '101' });
$('#saveButton').attr('disabled', true);

function preview(img, selection) {
  var scaleX = 50 / (selection.width || 1);
  var scaleY = 50 / (selection.height || 1);

  $('#preview img').css({
    width: Math.round(scaleX * <%= @photo_width %>) + 'px',
    height: Math.round(scaleY * <%= @photo_height %>) + 'px',
    marginLeft: '-' + Math.round(scaleX * selection.x1) + 'px',
    marginTop: '-' + Math.round(scaleY * selection.y1) + 'px'
  });
}
