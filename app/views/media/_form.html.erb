<%= form_for(@media.becomes(Media)) do |f| %>
  <% if @media.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@media.errors.count, "error") %> prohibited this <%= @media.class %> from being saved:</h2>

      <ul>
      <% @media.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="actions">
    <table>
      <tr>
        <td><%= f.label :taken_at %>:</td>
        <td><%= f.text_field :taken_at %></td>
      </tr>
      <tr>
        <td><%= f.label :tags %></td>
        <td><%= select_tag Tag, options_for_select(nested_set_options(Tag){|i,level| "#{'-' * level} #{i.name}" }, @media.tag_ids), :multiple => true, :name => 'media[tag_ids][]' %></td>
      </tr>
    </table>
    <%= f.submit %>
  </div>
<% end %>
